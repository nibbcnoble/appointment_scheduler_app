
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<BorderPane styleClass="lg_padding" xmlns:fx="http://javafx.com/fxml">
    <top><Label styleClass="title">Calendar</Label></top>
    <center>
        <VBox alignment="CENTER">
            <Label fx:id="calendar_current_label"></Label>
            <GridPane fx:id="calendar_grid"></GridPane>
        </VBox>

    </center>
    <bottom>
        <HBox alignment="CENTER">
            <Button fx:id="previous" text="Previous"></Button>
            <Button fx:id="view_switch" text="View By Week"></Button>
            <Button fx:id="next" text="Next"></Button>
        </HBox>
    </bottom>
</BorderPane>